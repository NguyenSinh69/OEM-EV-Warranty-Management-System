APP_NAME="EVM Customer Service"
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=http://localhost:8001
APP_PORT=8001

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=customer-db
DB_PORT=3306
DB_DATABASE=evm_customer_db
DB_USERNAME=evm_user
DB_PASSWORD=evm_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_TTL=1440

# External Services
KONG_GATEWAY_URL=http://kong:8000
VEHICLE_SERVICE_URL=http://vehicle-service:8003
WARRANTY_SERVICE_URL=http://warranty-service:8002
NOTIFICATION_SERVICE_URL=http://notification-service:8005

# Cache Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@evmwarranty.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis (if using)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# API Configuration
API_VERSION=v1
API_PREFIX=api

# Service Discovery
SERVICE_NAME=customer-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8001

# Security
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"