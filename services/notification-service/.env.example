APP_NAME="EVM Notification Service"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8005
APP_PORT=8005

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=notification-db
DB_PORT=3306
DB_DATABASE=evm_notification_db
DB_USERNAME=evm_user
DB_PASSWORD=evm_password

# Email Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@evmwarranty.com"
MAIL_FROM_NAME="${APP_NAME}"

# SMS Configuration (Mock for development)
SMS_PROVIDER=mock
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-secret
SMS_FROM_NUMBER=+84123456789

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_DEFAULT=default

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=2

# External Services
CUSTOMER_SERVICE_URL=http://customer-service:8001
VEHICLE_SERVICE_URL=http://vehicle-service:8003
WARRANTY_SERVICE_URL=http://warranty-service:8002
ADMIN_SERVICE_URL=http://admin-service:8004

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=300
EMAIL_QUEUE_DELAY=0
SMS_QUEUE_DELAY=5

# Security
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"