{
    "name": "oem-ev/warranty-service",
    "description": "OEM EV Warranty Management System",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "firebase/php-jwt": "^6.8",
        "phpmailer/phpmailer": "^6.8",
        "guzzlehttp/guzzle": "^7.7",
        "monolog/monolog": "^2.9",
        "vlucas/phpdotenv": "^5.5",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 app/",
        "fix": "phpcbf --standard=PSR12 app/"
    }
}